<?import java.net.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<AnchorPane fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml">
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>

    <Button mnemonicParsing="false" text="Send" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10"
            onAction="#ClickButtonSend"/>
    <TextField fx:id="TextField" promptText="Enter message" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
               AnchorPane.rightAnchor="80" onKeyPressed="#EnterPressed"/>
    <TextArea fx:id="TextArea" AnchorPane.leftAnchor="10" AnchorPane.bottomAnchor="60" AnchorPane.rightAnchor="10"
              AnchorPane.topAnchor="10" editable="false"/>
</AnchorPane>